#:kivy 1.8.0

<NeuronCell>:

<NeuralDisplay>:
	
<DigitalDisplayNode>:
	value: 0
	canvas:
		Color:
			rgb: (0,1,0) if self.value else (1,0,0)
		Rectangle:
			pos: self.pos
			size: self.size

<DigitalDisplay>:
	node1: node_topleft
	node2: node_top
	node3: node_topright
	node4: node_middle
	node5: node_bottomleft
	node6: node_bottom
	node7: node_bottomright

	DigitalDisplayNode:
		id: node_topleft
		x: root.x + (root.width / 3) - self.width
		y: root.y + root.height / 2 + (self.width / 2)
		size: 10, root.height / 4 - 5

	DigitalDisplayNode:
		id: node_bottomleft
		x: root.x + (root.width / 3) - self.width
		y: root.y + root.height / 4
		size: 10, root.height / 4 - 5

	DigitalDisplayNode:
		id: node_topright
		x: root.x + 2 * (root.width / 3)
		y: root.y + root.height / 2 + (self.width / 2)
		size: 10, root.height / 4 - 5

	DigitalDisplayNode:
		id: node_bottomright
		x: root.x + 2 * (root.width / 3)
		y: root.y + root.height / 4
		size: 10, root.height / 4 -5

	DigitalDisplayNode:
		id: node_top
		x: root.x + root.width / 3
		y: root.y + 3 * (root.height / 4)
		size: root.width / 3, 10

	DigitalDisplayNode:
		id: node_middle
		x: root.x + root.width / 3
		y: root.y + 2 * (root.height / 4) - (self.height / 2)
		size: root.width / 3, 10

	DigitalDisplayNode:
		id: node_bottom
		x: root.x + root.width / 3
		y: root.y + 1 * (root.height / 4) - self.height
		size: root.width / 3, 10
